<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".normal_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.2">

                <Switch
                    android:id="@+id/seniorSwitch"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="26dp"
                    android:scaleX="1.1"
                    android:scaleY="1.1"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="4"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:paddingTop="15dp"
                    android:src="@drawable/loc"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/cityName"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="KROSNO"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#404040"
                android:textAlignment="textStart"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="24dp"
                />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_margin="20dp"
            app:cardCornerRadius="35dp"
            app:cardBackgroundColor="#64DDFF"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dayName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="Poniedziałek, 01.04"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#404040"
                        />

                    <ImageView
                        android:id="@+id/weatherIcon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/sunny"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/weatherName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="SŁONECZNIE"
                    android:gravity="center"
                    android:textSize="34sp"
                    android:letterSpacing="0.1"
                    android:textStyle="bold"
                    android:textColor="#404040"
                    />

                <View
                    android:id="@+id/divider"
                    android:layout_width="320dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="?android:attr/listDivider"
                    android:layout_gravity="center_horizontal"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:text="Temp: "
                        android:gravity="center_vertical"
                        android:layout_marginStart="45dp"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#404040"
                        />

                    <TextView
                        android:id="@+id/temp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="20 C "
                        android:gravity="center_vertical"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#404040"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:layout_marginStart="45dp"
                        android:text="Ciśnienie: "
                        android:gravity="center_vertical"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#404040"
                        />
                    <TextView
                        android:id="@+id/pressure"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1010 hPa "
                        android:gravity="center_vertical"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#404040"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    >
                    <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:text="Wilgotność: "
                    android:gravity="center_vertical"
                    android:layout_marginStart="45dp"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#404040"
                    />
                    <TextView
                        android:id="@+id/humidity"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="55%"
                        android:gravity="center_vertical"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#404040"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="320dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="?android:attr/listDivider"
                    android:layout_gravity="center_horizontal"
                    />

                <TextClock
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:format24Hour="kk:mm"
                    android:gravity="center_vertical"
                    android:layout_marginStart="45dp"
                    android:textSize="44sp"
                    android:textStyle="bold"
                    android:textColor="#404040"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/sunrise"
                        />

                    <TextView
                        android:id="@+id/sunriseTime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#404040"
                        android:text="6:29"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/sunset"
                        android:scaleY="0.6"
                        android:scaleX="0.6"
                        />
                    <TextView
                        android:id="@+id/sunsetTime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#404040"
                        android:text="19:11"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            app:cardCornerRadius="35dp"
            app:cardBackgroundColor="#64DDFF"
            app:cardElevation="5dp">



        </androidx.cardview.widget.CardView>


    </LinearLayout>

</FrameLayout>