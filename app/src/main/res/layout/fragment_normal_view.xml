<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/normalView"
    tools:context=".normal_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_margin="20dp"
            app:cardCornerRadius="35dp"
            app:cardBackgroundColor="#64DDFF"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dayName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="Poniedziałek, 01.04"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#404040"
                        />

                    <ImageView
                        android:id="@+id/weatherIcon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/sunny"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/weatherName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="SŁONECZNIE"
                    android:gravity="center"
                    android:textSize="34sp"
                    android:letterSpacing="0.1"
                    android:textStyle="bold"
                    android:textColor="#404040"
                    />

                <View
                    android:id="@+id/divider"
                    android:layout_width="320dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="?android:attr/listDivider"
                    android:layout_gravity="center_horizontal"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:text="Temp: "
                        android:gravity="center_vertical"
                        android:layout_marginStart="45dp"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#404040"
                        />

                    <TextView
                        android:id="@+id/temp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="20 C "
                        android:gravity="center_vertical"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#404040"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:layout_marginStart="45dp"
                        android:text="Ciśnienie: "
                        android:gravity="center_vertical"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#404040"
                        />
                    <TextView
                        android:id="@+id/pressure"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1010 hPa "
                        android:gravity="center_vertical"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#404040"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    >
                    <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:text="Wilgotność: "
                    android:gravity="center_vertical"
                    android:layout_marginStart="45dp"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#404040"
                    />
                    <TextView
                        android:id="@+id/humidity"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="55%"
                        android:gravity="center_vertical"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#404040"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="320dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="?android:attr/listDivider"
                    android:layout_gravity="center_horizontal"
                    />

                <TextClock
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:format24Hour="kk:mm"
                    android:gravity="center_vertical"
                    android:layout_marginStart="45dp"
                    android:textSize="44sp"
                    android:textStyle="bold"
                    android:textColor="#404040"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/sunrise"
                        />

                    <TextView
                        android:id="@+id/sunriseTime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#404040"
                        android:text="6:29"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/sunset"
                        android:scaleY="0.6"
                        android:scaleX="0.6"
                        />
                    <TextView
                        android:id="@+id/sunsetTime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#404040"
                        android:text="19:11"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="35dp"
            app:cardBackgroundColor="#64DDFF"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:gravity="bottom"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="Następne dni"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#404040"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/forecastRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:padding="8dp"
                    android:orientation="horizontal"
                    tools:listitem="@layout/forecast_item" />

            </LinearLayout>



        </androidx.cardview.widget.CardView>


    </LinearLayout>

</FrameLayout>